<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mesalvaai.aplicativo">

    //PERMISSOES
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera2" android:required="true"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MeSalvaAI">
        <activity android:name=".activity.ConfiguracoesActivity"></activity>
        <activity
            android:name=".activity.CalcVFActivity"
            android:parentActivityName=".activity.PrincipalActivity" />
        <activity
            android:name=".activity.ResgatesActivity"
            android:theme="@style/despesaTheme" />
        <activity
            android:name=".activity.AplicacoesActivity"
            android:theme="@style/investimentoTheme" />
        <activity
            android:name=".activity.DespesasActivity"
            android:theme="@style/despesaTheme" />
        <activity
            android:name=".activity.ReceitasActivity"
            android:theme="@style/receitaTheme" />
        <activity
            android:name=".activity.PrincipalActivity"
            android:label="@string/title_activity_principal"
            android:theme="@style/Theme.MeSalvaAI.NoActionBar" />
        <activity android:name=".activity.CadastroActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>