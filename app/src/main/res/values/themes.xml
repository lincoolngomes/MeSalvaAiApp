<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeSalvaAI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MeSalvaAI.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MeSalvaAI.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MeSalvaAI.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--    Tema aplicado nas depesas-->
    <style name="despesaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryDespesas</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDespesas</item>
        <item name="colorAccent">@color/colorAccentDespesas</item>
    </style>

    <!--    Tema aplicado nas receitas-->
    <style name="receitaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryReceitas</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkReceitas</item>
        <item name="colorAccent">@color/colorAccentReceitas</item>
    </style>

    <!--    Tema aplicado nas investimentos-->
    <style name="investimentoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryInvestimentos</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInvestimentos</item>
        <item name="colorAccent">@color/colorAccentInvestimentos</item>
    </style>

</resources>